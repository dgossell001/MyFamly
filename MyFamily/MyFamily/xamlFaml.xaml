<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFamily.xamlFaml">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout>
        
        <!-- label 1 -->
        <Label BackgroundColor="White" TextColor="Red">
          <Label.FormattedText>
            <FormattedString>
              <Span
                Text="Me, myself, and I - "
              />
              <Span
                Text="David Gossell"
                FontAttributes="Bold"
              />
            </FormattedString>
          </Label.FormattedText>
        </Label>
        
        <!-- label 2 -->
        <Label BackgroundColor="Yellow" TextColor="Green">
          <Label.FormattedText>
            <FormattedString>
              <Span
                Text="Hard to believe but I found someone to marry me - "
              />
              <Span
                Text="Joni Gossell"
                FontAttributes="Bold"
              />
            </FormattedString>
          </Label.FormattedText>
        </Label>
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>